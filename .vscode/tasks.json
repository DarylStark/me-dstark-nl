{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install PIP requirements (old source)",
            "type": "shell",
            "command": "${config:python.pythonPath}",
            "args": [
                "-m", "pip", "install", "-r", "${workspaceFolder}/src/requirements.txt"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "Install PIP requirements (new source)",
            "type": "shell",
            "command": "${config:python.pythonPath}",
            "args": [
                "-m", "pip", "install", "-r", "${workspaceFolder}/src-new/requirements.txt"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "Deploy new-src to Google App Engine (version new-src)",
            "type": "shell",
            "command": "scripts/deploy.sh",
            "args": [
                "new-src"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "dedicated"
            },
            "problemMatcher": []
        }
    ]
}
