    "version": "0.2.0",
    "configurations": [
        {
            "name": "Google App Engine application",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/src/"
        },
        {
            "name": "Google App Engine application (new source)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src-new/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/src-new/"
        },
        {
            "name": "Google App Engine application (new source) - via Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "main",
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "cwd": "${workspaceFolder}/src-new/"
        }
    ]
}